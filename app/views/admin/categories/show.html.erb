<h1>Admin Control Panel</h1>
<div class="row">
  <%= render 'admin/shared/sidebar' %>
  <div class="col-md-9">
    <h2><%= @category.name %></h2>
    <%= link_to "Edit Category", edit_admin_category_path, class:"edit" %>
    <%= link_to "Delete Category",
      admin_category_path(@category),
      method: :delete,
      data: { confirm: "Are you sure you want to delete this category?" },
      class: "delete" %>
  </div>
</div>
