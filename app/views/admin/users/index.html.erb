<h1>Admin Control Panel</h1>
<div class="row">
  <%= render 'admin/shared/sidebar' %>
  <div class="col-md-9">
    <div class="actions">
      <%= link_to "New User", new_admin_user_path, class: "new" %>
    </div>
    <div class="users">
      <table class="table responsive">
        <tr>
          <th>
            Email
          </th>
          <th>
            Actions
          </th>
        </tr>
        <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user, [:admin, user] %>
            </td>
            <td>
              <%= link_to edit_admin_user_path(user), class: "btn btn-info",
              "data-toggle" => "tooltip", "data-placement"=>"bottom", "title" => "Edit User" do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to [:archive, :admin, user],
                method: :patch,
                data: { confirm: "Are you sure you want to archive this user?" },
                class: "btn btn-danger", "data-toggle" => "tooltip", "data-placement"=>"bottom", "title" => "Archive User" do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
