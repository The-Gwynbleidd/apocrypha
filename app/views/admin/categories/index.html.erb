<h1>Admin Control Panel</h1>
<div class="row">
  <div class="col-md-3">
    <div class="list-group">
      <%= link_to "Book Categories", admin_categories_path, class:"list-group-item" %>
    </div>
  </div>
  <div class="col-md-9">
    <div class="actions">
      <%= link_to "Add New Category", new_admin_category_path, class:"new" %>
    </div>
    <div class="categories">
      <table class="table responsive">
        <tr>
          <th>
            Name
          </th>
          <th>
            Actions
          </th>
        </tr>
        <% @categories.each do |category| %>
          <tr>
            <td>
              <%= link_to category.name, admin_category_path(category) %>
            </td>
            <td>
              <%= link_to edit_admin_category_path(category), class: "btn btn-info",
              "data-toggle" => "tooltip", "data-placement"=>"bottom", "title" => "Edit Category" do %>
                <i class="fa fa-pencil"></i>
              <% end %>
              <%= link_to admin_category_path(category),
                method: :delete,
                data: { confirm: "Are you sure you want to delete this category?" },
                class: "btn btn-danger", "data-toggle" => "tooltip", "data-placement"=>"bottom", "title" => "Delete Category" do %>
                <i class="fa fa-trash"></i>
              <% end %>
            </td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  })
</script>
